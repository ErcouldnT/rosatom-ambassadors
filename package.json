{
	"name": "rosatom-ambassadors",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run db:migrate && npm run db:seed && vite dev",
		"build": "npm run db:migrate && npm run db:seed && vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:seed": "npx tsx scripts/seed.js"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-vercel": "^6.3.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/leaflet": "^1.9.21",
		"@types/node": "^24",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@libsql/client": "^0.17.0",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@lucide/svelte": "^0.562.0",
		"daisyui": "^5.5.14",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"leaflet": "^1.9.4",
		"lucia": "^3.2.2",
		"sharp": "^0.34.5"
	},
	"lint-staged": {
		"*.{js,ts,svelte,json,md}": [
			"prettier --write"
		],
		"*.{js,ts,svelte}": [
			"eslint"
		]
	},
	"browserslist": [
		"last 1 major version"
	]
}
